<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_box"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_explanation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/res_cor2"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_line" />

    <LinearLayout
        android:id="@+id/lay_auth_channel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="8dp" >

        

            <LinearLayout
                android:id="@+id/auth_qq_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_payitem_selector"
                android:orientation="horizontal" >

                <ImageView
                android:id="@+id/qq_auth_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_qq_bind"
                android:layout_marginLeft="10dp"
				android:layout_gravity="center_vertical" />
                
                <TextView
                    android:id="@+id/qq_auth_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/res_cor6"
                    android:layout_marginLeft="10dp"
                    android:text="@string/qq_login_text"
					android:layout_gravity="center_vertical"
                    android:textSize="15sp" />
            </LinearLayout>
        
            
            <LinearLayout
                android:id="@+id/auth_phone_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_payitem_selector"
                android:orientation="horizontal" >

                <ImageView
                android:id="@+id/phone_auth_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_phone_bind"
                android:layout_marginLeft="10dp"
				android:layout_gravity="center_vertical" />
                
                <TextView
                    android:id="@+id/phone_auth_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/res_cor6"
                    android:layout_marginLeft="10dp"
                    android:text="@string/phone_login"
					android:layout_gravity="center_vertical"
                    android:textSize="15sp" />
            </LinearLayout>
            
            
            <LinearLayout
                android:id="@+id/auth_hupu_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_payitem_selector"
                android:orientation="horizontal" >

                <ImageView
                android:id="@+id/hupu_auth_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_mail_logo"
                android:layout_marginLeft="10dp"
				android:layout_gravity="center_vertical" />
                
                <TextView
                    android:id="@+id/hupu_auth_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/res_cor6"
                    android:layout_marginLeft="10dp"
                    android:text="@string/hupu_login"
					android:layout_gravity="center_vertical"
                    android:textSize="15sp" />
            </LinearLayout>
            
        
    </LinearLayout>
<TextView 
    android:id="@+id/un_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:textColor="@color/res_cor5"
    android:layout_gravity="right"
    android:text="@string/un_login_txt"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    />
</LinearLayout>