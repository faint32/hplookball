<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_news_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_player_rate_selector"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/news_img"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/no_news_pic"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/news_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="1"
        android:textColor="@color/res_cor2"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/news_img"
        android:lineSpacingExtra="1dp"
        android:singleLine="true"
        android:textColor="#ffaaaaaa"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/news_img"
        android:layout_marginTop="-5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_top"
            android:layout_width="28dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:background="@color/news_item_top"
            android:gravity="center"
            android:textColor="@color/res_cor1"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/light_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:gravity="top"
            android:textColor="#ffaaaaaa"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/light_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/icon_light" />

        <TextView
            android:id="@+id/txt_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="2dp"
            android:gravity="top"
            android:textColor="#ffaaaaaa"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/comment_ic" />
    </LinearLayout>

</RelativeLayout>