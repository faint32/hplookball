<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/league_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_league_list" >

        <ImageView
            android:id="@+id/leagu_logo"
            android:layout_width="56dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/leagu_logo"
            android:gravity="center"
            android:textColor="@color/res_cor1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/follow_team_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/group_img"
            android:textColor="@color/res_cor4"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/group_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/group_down" />
    </RelativeLayout>

</RelativeLayout>