<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/league_layout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_league_list"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/leagu_logo"
            android:layout_width="56dp"
            android:layout_height="44dp" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:shadowColor="@color/res_cor2"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:textColor="@color/res_cor1"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/choose_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_choose_selector" />
    </LinearLayout>

</LinearLayout>