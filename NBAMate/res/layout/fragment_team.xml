<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
         android:id="@+id/layout_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="@color/res_cor1"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/img_team_logo"
            android:layout_width="83dp"
            android:layout_height="66dp" 
            android:layout_marginRight="6dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            >

            <TextView
                android:id="@+id/txt_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/res_cor2"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_team"
                android:textColor="@color/res_cor8"
                android:textSize="@dimen/txt3" />

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_team"
                android:layout_toRightOf="@id/txt_1"
                android:textColor="@color/res_cor8"
                android:textSize="@dimen/txt3" 
                android:layout_marginLeft="6dp"/>

            <TextView
                android:id="@+id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_1"
                android:textColor="@color/res_cor8"
                android:textSize="@dimen/txt3" />

            <TextView
                android:id="@+id/txt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_1"
                android:layout_toRightOf="@id/txt_3"
                android:textColor="@color/res_cor8"
                android:textSize="@dimen/txt3" 
                android:layout_marginLeft="6dp"/>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/list_teams"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="4dp" 
        android:layout_below="@+id/layout_info"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <ProgressBar
        android:id="@+id/probar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>