<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        style="@style/bg_title_bar"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/btn_back"
            style="@style/btn_back" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/txt_title"
            android:text="@string/my_title" />

        <Button
            android:id="@+id/btn_setup"
            style="@style/btn_right"
            android:text="@string/title_setup"
            android:textColor="@color/res_cor1" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/setting_bg"
        android:layout_below="@id/layout_title_bar" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_bind_list_bg"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout_account"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/my_userinfo"
                        android:textColor="@color/res_cor2"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_nick_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:textColor="@color/setting_font_color"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_arrow" />
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/user_caipiao_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:background="@drawable/bg_bind_list_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout_caipiao_result"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/text_caipiao_result"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/title_my_caipiao_result"
                        android:textColor="@color/res_cor2"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/caipiao_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:textColor="@color/setting_font_color"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_arrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_wallet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_user_list_bg"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/text_wallet_result"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/title_my_wallet_result"
                        android:textColor="@color/res_cor2"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/wallet_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:textColor="@color/setting_font_color"
                        android:textSize="16sp" />
                    <ProgressBar 
                        android:id="@+id/wallet_Porgress"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_arrow" />
                </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:id="@+id/user_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_bind_list_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout_guess_result"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/text_guess_result"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/title_my_guess_result"
                        android:textColor="@color/res_cor2"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/guess_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:textColor="@color/setting_font_color"
                        android:textSize="16sp" />
                    <ProgressBar 
                        android:id="@+id/guess_Porgress"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_arrow" />
                </LinearLayout>

<!--                 <View
                    android:id="@+id/layout_phone_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray" /> -->

                <LinearLayout
                    android:id="@+id/layout_coin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_user_list_bg"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/title_my_coin"
                        android:textColor="@color/res_cor2"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/gold_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:visibility="gone"
                        android:src="@drawable/icon_gold" />

                    <TextView
                        android:id="@+id/txt_coin_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:textColor="@color/setting_font_color"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/user_box_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:visibility="gone"
                        android:src="@drawable/icon_box_gold_s" />

                    <TextView
                        android:id="@+id/txt_box_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:textColor="@color/setting_font_color"
                        android:textSize="16sp" />

                    <ProgressBar 
                        android:id="@+id/gold_Porgress"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        />
                    
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_arrow" />
                </LinearLayout>

                
            </LinearLayout>

            <LinearLayout 
                android:id="@+id/show_mall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >
                
                <TextView 
                    android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
                    android:text="@string/txt_exchange_prize"
                    android:textColor="@color/res_cor5"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    />
                
                <TextView 
                    android:id="@+id/my_prize_txt"
                    android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
                    android:text="@string/txt_my_prize"
                    android:textColor="@color/res_cor5"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            
            <HorizontalScrollView
                android:id="@+id/coin_prize_scroll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="110dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/bg_bind_list_bg" >
                <LinearLayout
                    android:id="@+id/coin_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            </LinearLayout>
            
            <TextView 
                    android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
               		android:layout_marginLeft="10dp"
                	android:layout_marginRight="10dp"
                	android:layout_marginTop="10dp"
                    android:text="@string/today_task"
                    android:textColor="@color/res_cor5"
                    android:textSize="16sp"
                    />
            
            <LinearLayout 
                android:id="@+id/today_task_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/feedback_layout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_bind_list_bg"
                android:orientation="vertical" >

                 <!-- 友盟交换 -->

                <TextView
                    android:id="@+id/layout_contacts"
                    style="@style/txt_item_setup"
                    android:text="@string/title_contacts" />
                <!-- 反馈 -->

                <TextView
                    android:id="@+id/layout_feedback"
                    style="@style/txt_item_setup"
                    android:background="@drawable/bg_user_list_bg"
                    android:text="@string/feedback" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar 
        android:id="@+id/load_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
</RelativeLayout>