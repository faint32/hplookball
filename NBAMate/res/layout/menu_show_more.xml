<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_more"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_league_selector"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/more_league_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:background="@drawable/more_icn_down" />

    <TextView
        android:id="@+id/more_league_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:shadowColor="@color/res_cor2"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:text="@string/more_league_text"
        android:textColor="@color/res_cor1"
        android:textSize="15sp" />

</LinearLayout>