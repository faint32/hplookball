<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_menu_left"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        style="@style/bg_menu_title_bar"
        android:layout_height="49dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:src="@drawable/icon_menu_logo" />

        <Button
            android:id="@+id/btn_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_setup_selector"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/title_divider"
        android:layout_below="@+id/layout_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/left_menu_divider" />

    <LinearLayout
        android:id="@+id/menu_user_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_divider"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/menu_name_info"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_menu_left_selector"
            android:paddingRight="8dp" >

            <ImageView
                android:id="@+id/user_icon_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_men" />

            <TextView
                android:id="@+id/menu_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_icon_img"
                android:singleLine="true"
                android:text="@string/my_userinfo"
                android:textColor="@color/res_cor4"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/account_red_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="6dp"
                android:layout_toRightOf="@+id/menu_nick_name"
                android:background="@drawable/icon_red_point"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="65dp"
            android:background="@color/left_menu_divider" />

        <RelativeLayout
            android:id="@+id/menu_my_caipiao"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
             android:background="@drawable/bg_menu_left_selector"
            android:paddingRight="8dp" >

            <ImageView
                android:id="@+id/caipiao_icon_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_lottery" />

            <TextView
                android:id="@+id/caipiao_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/caipiao_icon_img"
                android:text="@string/menu_caipiao_txt"
                android:textColor="@color/res_cor4"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/caipiao_red_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="6dp"
                android:layout_toRightOf="@+id/caipiao_txt"
                android:background="@drawable/icon_red_point"
                android:visibility="gone" />

            <TextView
                android:id="@+id/wallet_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/caipiao_red_point"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/res_cor10"
                android:textSize="14sp" />
        </RelativeLayout>
              <View
                  android:id="@+id/menu_my_caipiao_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="65dp"
            android:background="@color/left_menu_divider" />
