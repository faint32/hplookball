<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
   >

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bg_team_date_selector"
        android:textColor="@color/res_cor8"
        android:textSize="@dimen/txt0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
         android:background="@drawable/list_bg_team_schedule_selector"
         android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_home_away"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/res_cor2"
            android:textSize="@dimen/txt0"
             android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/txt_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/res_cor2"
            android:textSize="@dimen/txt0" 
             android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/img_team_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:textColor="@color/res_cor2"
            android:textSize="@dimen/txt0" 
            />

        <TextView
            android:id="@+id/txt_win"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/res_cor3"
            android:textSize="@dimen/txt0"
            android:gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>