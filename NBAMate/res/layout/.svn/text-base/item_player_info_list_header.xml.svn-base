<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#aa000000"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_date_name"
        style="@style/txt_player_info"
        android:gravity="center_vertical"
        android:paddingLeft="8dp" />
    
    <TextView
        android:id="@+id/txt_team_name"
        style="@style/txt_player_info"
        android:gravity="center_vertical"
        android:paddingLeft="8dp" />
     <View
        android:id="@+id/line"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:background="#ff2f3032" />

    <com.hupu.games.view.InterceptScrollContainer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false" >

        <com.hupu.games.view.HScrollView
            android:id="@+id/hscrollview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/layout_containter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
            </LinearLayout>
        </com.hupu.games.view.HScrollView>
    </com.hupu.games.view.InterceptScrollContainer>

</LinearLayout>