<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_room_item_selector" >

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:text="name"
        android:textColor="@color/res_cor1"
        android:textSize="@dimen/txt2" />

    <TextView
        android:id="@+id/anchor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/room_name"
        android:layout_below="@+id/room_name"
        android:paddingBottom="5dip"
        android:layout_marginTop="5dip"
        android:text="主播："
        android:textColor="@color/res_cor4"
        android:textSize="@dimen/txt4" />

    <TextView
        android:id="@+id/anchor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/anchor_title"
        android:layout_toRightOf="@+id/anchor_title"
         android:paddingBottom="5dip"
        android:singleLine="true"
        android:text="fef"
        android:textColor="@color/res_cor4"
        android:textSize="@dimen/txt4" />

    <TextView
        android:id="@+id/room_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dip"
        android:singleLine="true"
        android:textColor="@color/txt_live_room_online"
        android:textSize="@dimen/txt3" />

</RelativeLayout>