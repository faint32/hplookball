<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="53dp"
    android:background="@drawable/bg_user_list_item_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/hupudollor_order" />

    <TextView
        android:id="@+id/txt_pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@+id/btn_pay"
        android:layout_toRightOf="@+id/img_gold"
        android:singleLine="true"
        android:textColor="@color/res_cor7"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:shadowColor="#ffffffff"
        android:shadowDx="0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:layout_marginRight="12dp"
        android:textStyle="bold"
        android:background="@drawable/btn_unbinding_selector"
        android:textColor="@color/res_cor8"
        android:textSize="12sp" />

</RelativeLayout>