<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff1f1f1f"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        style="@style/bg_title_bar" >

        <Button
            android:id="@+id/btn_back"
            style="@style/btn_back" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/txt_title"
            android:text="VIP介绍" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
       />
  

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="充值即送全套VIP特权"
            android:textColor="@color/res_cor1"
            android:textSize="16sp" />

        <Button
              android:layout_marginTop="5dp"
            android:id="@+id/btn_charge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_red2_selector"
            android:text="@string/charge_now"
            android:textColor="@color/res_cor1"
            android:textSize="16sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="看球金豆兑换VIP特权"
            android:textColor="@color/res_cor1"
            android:textSize="16sp" />

        <Button
             android:layout_marginTop="5dp"
            android:id="@+id/btn_buy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_red2_selector"
            android:text="@string/buy_now"
            android:textColor="@color/res_cor1"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>