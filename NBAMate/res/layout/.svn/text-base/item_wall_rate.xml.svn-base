<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_comment_box"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:gravity="bottom"
        android:paddingLeft="6dp">

        <TextView
            android:id="@+id/txt_rating_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_player_rate"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_rating_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/res_cor1"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/txt_rating_coin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/res_cor1"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/txt_like_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical|right"
            android:layout_gravity="right"
            android:textColor="@color/txt_player_rate"
            android:textSize="12sp" />

       
    </LinearLayout>

    <TextView
        android:id="@+id/rank_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_rating_desc"
        android:textSize="15sp" 
        android:paddingLeft="6dp"/>
    
    <TextView 
        android:id="@+id/hated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_player_rate"
        android:textSize="16sp"
        android:paddingLeft="6dp"
        android:maxLines="1"
        android:ellipsize = "end"
        android:singleLine="true"
        android:layout_marginTop="14dp"
        />

</LinearLayout>