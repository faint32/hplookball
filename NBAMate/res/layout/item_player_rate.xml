<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp" 
    android:paddingLeft="5dp" 
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_comment_box"
        android:padding="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingLeft="6dp" >

            <TextView
                android:id="@+id/txt_rating_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PYJ"
                android:textColor="@color/res_cor1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_rating_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="得分"
                android:textColor="@color/txt_player_rate"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_rating_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:text="10分"
            android:textColor="@color/txt_rating_desc"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>