<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        style="@style/bg_title_bar"
        android:layout_width="fill_parent" >

        <Button
            android:id="@+id/btn_back"
            style="@style/btn_back" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/txt_title"
            android:text="@string/title_input_phone" />

        <Button
            android:id="@+id/btn_next"
            style="@style/btn_right"
            android:text="@string/title_next"
            android:textColor="@color/res_cor1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layout_title_bar"
        android:background="@color/setting_bg"
        android:orientation="vertical" 
        android:padding="12dp">

         
         
        <EditText
            android:id="@+id/edt_nick_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_edit_text" 
            android:layout_marginTop="10dp"
            android:hint="@string/hit_input_phone"
            android:textSize="15sp"
            android:inputType="phone"
            android:textColorHint="#ffc4c4c4"
            >
            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/des_input_phone" 
            android:textColor="#ff516491"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>

</RelativeLayout>